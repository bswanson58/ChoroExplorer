<UserControl x:Class="ChoroExplorer.MapDisplay.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChoroExplorer.MapDisplay"
             xmlns:wpf="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
             xmlns:controls="clr-namespace:ChoroExplorer.Controls"
             xmlns:viewModelLocator="clr-namespace:ReusableBits.Wpf.ViewModelLocator;assembly=ReusableBits.Wpf"
             mc:Ignorable="d" 
             viewModelLocator:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance local:MapViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <wpf:MapControl x:Name="_mapControl" controls:BindableMap.BoundMap="{Binding Map}"/>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Height="35" Width="35" Padding="0"
                BorderThickness="0" Background="Transparent" Foreground="DarkSlateGray" Focusable="False" 
                ToolTip="Center Map" Content="{StaticResource Path_Center}" Command="{Binding CenterMap}"/>
    </Grid>
</UserControl>
